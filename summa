Q2.)
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner summa = new Scanner(System.in);
	    int num1 = summa.nextInt();
	    int num2 = summa.nextInt();
	    System.out.printf("%.2f",(float)Math.pow(num1,num2));
	   
	    }
}
