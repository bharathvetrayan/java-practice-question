Q7.)
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the total number of attendees: ");
        int totalAttendees = scanner.nextInt();
        scanner.close();
        int day1 = 2*totalAttendees / 7; 
        int day2 = 2 * day1;          
        int day3 = day1 / 2;          
        System.out.println("Number of attendees on day 1: " + day1);
        System.out.println("Number of attendees on day 2: " + day2);
        System.out.println("Number of attendees on day 3: " + day3);
    }
}
